<h1><%=current_user.username%>'s Plant Pot Index</h1>
<%current_user.plants.each do |plant|%>
  <%pot = plant.plant_pot%>
  <ul><a href="/plant_pots/<%=pot.id%>">Pot <%=pot.id%></a></ul>
  <ul>Color: <%=pot.color%></ul>
  <ul>Size: <%=pot.size%></ul>
  <%if pot.plant%>
    <ul>Plant: <%=pot.plant.name%></ul>
  <%end%>
<%end%>


<% if logged_in?%>
<form action="/logout" method="POST">
  <input type="submit" value="Logout">
</form>
<form action="/plant_pots/new" method="POST">
  <input type="submit" value="Add New Pot">
</form>
<% end %>
